<Window x:Class="PROGPOEPart1.LandingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROGPOEPart1"
        mc:Ignorable="d"
        Title="Time Management" Height="450" Width="800"
        BorderBrush="DarkGray"
        WindowStyle="None"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">


    <Grid>
        <TextBlock
            Background="DarkGray"
            Foreground="Black"
            TextAlignment="Center"
            Padding="10"
            FontSize="24"
            FontWeight="Bold"
            Text="Welcome to the Time Management App"/>

        <TextBlock x:Name="tbTimer"
            Margin="20"
                   VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Foreground="Red"
            Text="*NO MODULES ADDED*"/>

    </Grid>

</Window>
